{
    "name": "delivery-codeflix-heroku",
    "scripts":{
        "postdeploy": "composer update && php artisan migrate --seed"
    },
    "env": {
        "APP_DEBUG": {
            "required": true
        },
        "APP_ENV": {
            "required": true
        },
        "APP_KEY": {
            "required": true
        },
        "DB_CONNECTION": {
            "required": true
        }
    },
    "formation": {
        "web": {
            "quantity": 1
        }
    },
    "addons": [
        "papertrail",
        "cleardb"
    ],
    "buildpacks": [
        {
            "url": "heroku/php"
        }
    ]
}